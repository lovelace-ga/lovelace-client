{{#if ps}}
    {{#each ps as |p|}}
      <div class="list-group-item">
        <h3 class="list-group-item-heading">{{p.title}}</h3>
        <h3 class="date">{{p.date}}</h3>
        <a data-id={{p.id}} class="edit">edit </a>
        <a data-id={{p.id}} class="delete"> delete</a>
      </div>
      <br>
    {{/each}}
{{else}}
<h4 class="list-group-item-heading">This site doesn't have any {{p}}s yet.</h4>
<pclass="list-group-item-text> You can create one by clicking the buttons on the left</p>
{{/if}}
